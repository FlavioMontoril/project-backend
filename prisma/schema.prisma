generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String    @id @default(uuid())
  summary     String    @db.VarChar(40)
  description String    @db.VarChar(100)
  type        TaskType
  createdAt   DateTime? @map("created_at")
  updatedAt   DateTime? @map("updated_at")
  userId      String?   @map("user_id")

  user       User?       @relation(fields: [userId], references: [id])
  tasksUsers TasksUser[]

  @@map("tasks")
}

enum TaskType {
  TASK
  EPIC
  BUG
  SUB_TASK
}

enum TaskStatus {
  OPEN
  DONE
  IN_PROGRESS
  UNDER_REVIEW
}

model Role {
  id          String      @id @default(uuid())
  name        RoleOptions
  description String      @db.VarChar(100)
  createdAt   DateTime    @map("created_at")
  updatedAt   DateTime?   @map("updated_at")
  user        User[]

  @@map("roles")
}

enum RoleOptions {
  MASTER
  ADMIN
  COMMON
  GUEST
}

model User {
  id                     String                  @id @default(uuid())
  name                   String                  @db.VarChar(50)
  email                  String                  @unique
  passwordHash           String                  @map("password_hash")
  department             String                  @db.VarChar(50)
  roleId                 String
  role                   Role                    @relation(fields: [roleId], references: [id])
  createdAt              DateTime                @default(now()) @map("created_at")
  updatedAt              DateTime?               @map("updated_at")
  tasks                  Task[]
  notifications          Notification[]
  notificationRecipients NotificationRecipient[]
  reportedTasks          TasksUser[]             @relation("TaskReporter")
  assignedTasks          TasksUser[]             @relation("TaskAssignee")

  @@map("users")
}

model Notification {
  id                     String                  @id @default(uuid())
  content                String                  @db.VarChar(100)
  triggeredId            String                  @map("triggered_id")
  user                   User                    @relation(fields: [triggeredId], references: [id])
  entityType             String                  @db.VarChar(10)
  createdAt              DateTime                @map("created_at")
  notificationRecipients NotificationRecipient[]

  @@map("notifications")
}

model NotificationRecipient {
  id             String    @id @default(uuid())
  notificationId String    @map("notification_id")
  userId         String    @map("user_id")
  readAt         DateTime? @map("read_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  notification Notification @relation(fields: [notificationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@map("notification_recipients")
}

model TasksUser {
  id         String @id @default(uuid())
  reporterId String @map("reporter_id")
  assigneeId String @map("assignee_id")
  taskId     String @map("task_id")

  task     Task @relation(fields: [taskId], references: [id])
  assignee User @relation("TaskAssignee", fields: [assigneeId], references: [id])
  reporter User @relation("TaskReporter", fields: [reporterId], references: [id])

  status    TaskStatus
  updatedAt DateTime?   @map("updated_at")
  createdAt DateTime   @map("created_at")

  @@map("tasks_user")
}
